<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.LearnedFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/learnedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/rcView"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/learnedStateImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/study" />

        <TextView
            android:id="@+id/learnedStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/please_go_and_learn_some_words"
            android:textSize="20sp" />

    </LinearLayout>


</FrameLayout>