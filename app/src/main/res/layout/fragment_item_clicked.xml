<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".view.ItemClickedFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/learnedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enText" />

    <ImageView
        android:id="@+id/itemDetailImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/trText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/trIcon"
        app:layout_constraintTop_toTopOf="@+id/trIcon"
        tools:text="asdasdasdasdasa" />

    <ImageView
        android:id="@+id/trIcon"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/tr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDetailImage" />

    <ImageView
        android:id="@+id/euIcon"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:src="@drawable/en"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/deuIcon"
        app:layout_constraintTop_toBottomOf="@+id/deuIcon" />

    <TextView
        android:id="@+id/enText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/deuText"
        app:layout_constraintTop_toTopOf="@+id/euIcon"
        tools:text="asdasdasdasdasa" />

    <ImageView
        android:id="@+id/deuIcon"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/deu"
        app:layout_constraintStart_toStartOf="@+id/trIcon"
        app:layout_constraintTop_toBottomOf="@+id/trIcon" />

    <TextView
        android:id="@+id/deuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/trText"
        app:layout_constraintTop_toTopOf="@+id/deuIcon"
        tools:text="asdasdasdasdasa" />


</androidx.constraintlayout.widget.ConstraintLayout>